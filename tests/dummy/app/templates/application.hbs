<h2 id='title'>Welcome to ember-cli-famous</h2>

{{input value=text}}

{{#fa-app}}
  {{#fa-surface options=options}}
    {{#fa-template bindCtx=controller dependentKeys=controller.dependentKeys}}
      <h1>{{text}}</h1>
      <ul>
        {{#each color in colors}}
          <li>
            {{color}}
          </li>
        {{/each}}
      </ul>
    {{/fa-template}}
  {{/fa-surface}}
{{/fa-app}}

{{outlet}}
